
<h1>Users</h1>

<div class="col-xs-12">
  <%= render 'layouts/messages' %>
</div>
<div class="col-xs-12">
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <% if current_user.admin? %>
            <th></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role.titleize %></td>
            <% if current_user.admin?%>
              <td>
                <% if current_user.id != user.id %>
                  <%= link_to 'Edit', edit_user_path(user) %>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<p><%= link_to 'Return', welcome_index_url %></p>
